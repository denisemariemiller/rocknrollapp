<div class="well">
	<p id="notice"><%= notice %></p>

	<h2><%= @song.name %></h2>
	by <h4><%= link_to @song.artist.name, @song.artist %></h4>

<p>
	<% @song.rating.times do %>
	<span class="glyphicon glyphicon-star"></span>
		<% end %>
</p>
<p>

  <strong>Artist:</strong>
  <%= @song.artist_id %>
</p>


	<p class="center-it">
		<%= link_to edit_song_path(@song) do %> 
			<i class="fa fa-pencil"></i> Edit 
		<% end %>
	</p>
	<p class="center-it">
		<%= link_to songs_path do %>
			<i class="fa fa-undo"></i> Back to Song Index
		<% end %>
	</p>
</div>